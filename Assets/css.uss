:root {
    /*font-size: auto;*/
    --gray-0: #faf9f9;
    --gray-1: #eeedec;
    --gray-2: #e2e0de;
    --gray-3: #d5d3cf;
    --gray-4: #c6c3be;
    --gray-5: #b6b3ac;
    --gray-6: #a49f97;
    --gray-7: #8e887e;
    --gray-8: #736b5e;
    --gray-9: #443f35;

    --gray-2-0: #fbf9f8;
    --gray-2-1: #f3eceb;
    --gray-2-2: #ebdedc;
    --gray-2-3: #e2cfcc;
    --gray-2-4: #d8beba;
    --gray-2-5: #ccaca6;
    --gray-2-6: #bf9690;
    --gray-2-7: #b07c74;
    --gray-2-8: #9b5b51;
    --gray-2-9: #6a2d23;

    --cursor-point: resource("ui/cursors/point");
}

