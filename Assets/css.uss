#PawnInfoParent {
    background-color: var(--gray-9);
}

#TitleBar {
    background-color: var(--gray-7);
}

#TitleBar #CloseButton {
    background-color: rgb(255, 105, 97);
    padding: 0;
    margin: 0;
}

#TitleBar #MoreInfo {
    border-radius: 10px;
    width: 15px;
    color: white;
    background-color: var(--gray-2-6);
    padding: 0;
    margin: 0;
}

.moreinfo {
    border-radius: 10px;
    left: 100%;
    width: 15px;
    color: white;
    background-color: var(--gray-2-6);
}

.consistentLabel {
    font-size: 100%;
}

#Vitals {
    background-color: var(--gray-6);
}

#RegimentSelect {
    background-color: var(--gray-5);
}

#RegimentSelect #ScrollButton {
    border-width: 0;
    background-color: var(--gray-8);
}

#RegimentShiz #Controls #HideButton {
    border-width: 0;
    margin: 0;
    padding: 0;
}

#Regiment-Label {
    color: white;
    background-color: black;
}

#RegimentControlStuff {
    background-color: var(--gray-5);
}

#RegimentControlStuff #unity-tracker {
    border-radius: 0;
    width: 7px;
    height: 24px;
    background-color: var(--gray-2-8);
}

#RegimentControlStuff #unity-dragger {
    background-color: var(--gray-2-6);
    height: 15px;
    top: 30%;
}

#RegimentSelect #ScrollView .unity-scroller * {
    max-height: 20px;
    min-height: 20px;
    height: 20px;
}
