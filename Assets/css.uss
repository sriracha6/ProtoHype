:root {
    --gray-0: rgb(250, 249, 249);
    --gray-1: rgb(238, 237, 236);
    --gray-2: rgb(226, 224, 222);
    --gray-3: rgb(213, 211, 207);
    --gray-4: rgb(198, 195, 190);
    --gray-5: rgb(182, 179, 172);
    --gray-6: rgb(164, 159, 151);
    --gray-7: rgb(142, 136, 126);
    --gray-8: rgb(115, 107, 94);
    --gray-9: rgb(68, 63, 53);
    --gray-2-0: rgb(251, 249, 248);
    --gray-2-1: rgb(243, 236, 235);
    --gray-2-2: rgb(235, 222, 220);
    --gray-2-3: rgb(226, 207, 204);
    --gray-2-4: rgb(216, 190, 186);
    --gray-2-5: rgb(204, 172, 166);
    --gray-2-6: rgb(191, 150, 144);
    --gray-2-7: rgb(176, 124, 116);
    --gray-2-8: rgb(155, 91, 81);
    --gray-2-9: rgb(106, 45, 35);
    --cursor-point: resource('ui/cursors/point');
}

.actionbutton {
    color: black;
    background-color: var(--gray-7);
    border-width: 4px;
    font-size: initial;
    border-color: var(--gray-4);
}

#PawnInfo .unity-label {
    font-size: 25px;
}

.icon {
    width: 25px;
    height: 25px;
    background-color: white;
}

