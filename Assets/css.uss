#PawnInfo .unity-label
{
    font-size: 25px;
}

.unity-button
{
    border-radius:0px;
    background-color: var(--gray-3);
}

.icon{
    width:25px;
    height:25px;
    background-color:white;
}
.timebutton
{
    background-color: var(--gray-2-9);
    border-radius: 0px;
    border-color: var(--gray-0);

}
#TimeControls
{
    background-color: var(--gray-3);
}

/* pawn info close button */
#pi-closebutton
{
    border-width: 0px;
    color: white;
}

.unity-label
{
    color: white;
}


.unity-scroller { width: 15px; }
.unity-scroller * {width: 15px;}

.unity-toggle__input #unity-checkmark
{
    background-color: var(--gray-9);
}

.unity-toggle__checkmark:enabled
{
    -unity-background-image-tint-color: white;
    background-image: resource("ui/check");
}





#PawnInfoParent
{
    background-color: var(--gray-9);
}
#TitleBar
{
    background-color: var(--gray-7);
}
#TitleBar #CloseButton
{
    background-color: #ff6961;
    padding:0;
    margin:0;
}
#TitleBar #MoreInfo
{
    border-radius: 10px;
    width: 15px;
    color: white;
    background-color: var(--gray-2-6);

    padding:0;
    margin:0;
}
.moreinfo
{
    border-radius: 10px;
    left: 100%;
    width: 15px;
    color: white;
    background-color: var(--gray-2-6);
}


.consistentLabel
{
    font-size: 100%;
}

#Vitals
{
    background-color: var(--gray-6);
}

#RegimentSelect /* this would be aight for a glass blur effect? */
{
    background-color: var(--gray-5);
}
#RegimentSelect #ScrollButton
{
    border-width: 0px;
    background-color: var(--gray-8);
}
#RegimentShiz #Controls #HideButton
{
    border-width:0px;
    margin:0; padding:0;
}

#Regiment-Label
{
    color:white;
    background-color: black;
}

#RegimentControlStuff
{
    background-color: var(--gray-5); /* same color as the regiment select box so it should subtly nod at it */
}

#RegimentControlStuff #unity-tracker
{
    border-radius: 0px;
    width: 7px;
    height: 24px;
    background-color: var(--gray-2-8);
}
#RegimentControlStuff #unity-dragger
{
    background-color: var(--gray-2-6+);
    height:15px;
    top:30%;
}